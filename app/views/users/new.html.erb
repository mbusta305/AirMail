
  <%= form_for(@user, url: users_path) do |f| %>
      <h3>Sign Up</h3>
        <div class="form-group">
          <%= f.text_field :first_name, :placeholder => "First Name", :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, :placeholder => "Last Name", :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.text_field :username, :placeholder => "Username", :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.text_field :password, :placeholder => "Password", :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.text_field :password_confirmation, :placeholder => "Password Confirmation", :required => 'required' %>
        </div>
        <%= f.submit 'Sign Up', :class => "btn btn-success" %>
        <br>
      <%= link_to 'Login', login_path %>
    <% end %>

  <div class="row">
    <div class="col-lg-4"><h3>Log In...</h3></div>
  </div>
  <br>

  <%= form_tag login_path, :class => "form-horizontal" do %>
  <fieldset>

    <div class="form-group">
        <%= label_tag :username, nil, :class => "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= text_field_tag :username, nil, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
        <%= label_tag :password, nil, :class => "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= password_field_tag :password, nil, :class => "form-control" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <center><%= submit_tag 'Log In', :class => "btn btn-primary btn-md" %></center>
    </div>

    <div class="form-group">
      <center><%= link_to 'Sign Up', new_user_path %></center>
    </div>

  </fieldset>
  <% end %>

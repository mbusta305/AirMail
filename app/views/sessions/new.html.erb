<%= render "/packages/menu" %>


  <div class="row">
    <div class="col-lg-4"><h1>Sign In..</h1></div>
  </div>
  <br>

  <%= form_tag login_path, :class => "form-horizontal" do %>
  <fieldset>

    <div class="form-group">
        <%= label_tag :username, nil, :class => "col-lg-4 control-label" %>
      <div class="col-lg-4">
        <%= text_field_tag :username, nil, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
        <%= label_tag :password, nil, :class => "col-lg-4 control-label" %>
      <div class="col-lg-4">
        <%= password_field_tag :password, nil, :class => "form-control" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <center><%= submit_tag 'Log In', :class => "btn btn-primary btn-lg" %></center>
    </div>
    
    <div class="form-group">
      <center>Or feel free to <%= link_to 'Sign Up', new_user_path %></center>
    </div>

  </fieldset>
  <% end %>
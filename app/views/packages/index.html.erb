<h1>My Air Mail</h1>

<td><%= link_to 'Create New Label', new_package_path, :class => "btn btn-success btn-sm" %></td>
<table class="table table-hover">
  <thead>
    <tr>
      <th>First name:</th>
      <th>Last name:</th>
      <th>Email:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.first_name %></td>
        <td><%= package.last_name %></td>
        <td><%= package.email %></td>
        <td><%= link_to 'Show', package, :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to "Shipment Sticker", package.label_url , target: "blank", :class => "btn btn-info btn-sm" %></td>

        <!-- <td><%= link_to 'Edit', edit_package_path(package), :class => "btn btn-warning btn-sm" %></td> -->
        <td><%= link_to 'Delete', package, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
